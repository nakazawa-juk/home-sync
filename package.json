{
  "name": "homesync-monorepo",
  "version": "1.0.0",
  "description": "HomeSync - 建設工程管理システム",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "format": "npm run format --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "python:format": "cd backend && python -m black . && python -m ruff check --fix .",
    "python:lint": "cd backend && python -m ruff check .",
    "python:typecheck": "cd backend && python -m mypy .",
    "frontend:dev": "npm run dev --workspace=frontend",
    "frontend:build": "npm run build --workspace=frontend",
    "backend:dev": "cd backend && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "install:all": "npm install && cd backend && pip install -e \".[dev]\""
  },
  "keywords": ["homesync", "construction", "schedule", "pdf", "nextjs", "fastapi"],
  "author": "Jukiya Nakazawa",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {},
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/home-sync.git"
  }
}
